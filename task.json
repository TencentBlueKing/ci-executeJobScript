{
  "atomCode": "executeJobScript",
  "execution": {
    "packagePath": "executeJobScript-jar-with-dependencies.jar",
    "language": "java",
    "minimumVersion": "1.8",
    "demands": [],
    "target": "$bk_java_path -jar executeJobScript-jar-with-dependencies.jar -Dfile.encoding=utf8"
  },
  "input": {
    "bizId": {
      "label": "业务 ID",
      "default": "",
      "type": "vuex-input",
      "desc": "Job 中登记的业务 ID",
      "required": true,
      "disabled": false,
      "hidden": false,
      "isSensitive": false
    },
    "scriptType": {
      "label": "脚本类型",
      "default": "1",
      "placeholder": "",
      "type": "enum-input",
      "list": [
        {
          "label": "shell",
          "value": "1"
        },
        {
          "label": "bat",
          "value": "2"
        },
        {
          "label": "perl",
          "value": "3"
        },
        {
          "label": "python",
          "value": "4"
        },
        {
          "label": "powershell",
          "value": "5"
        }
      ],
      "desc": "",
      "required": true,
      "disabled": false,
      "hidden": false,
      "isSensitive": false
    },
    "scriptContent": {
      "label": "脚本内容",
      "default": "",
      "placeholder": "",
      "type": "atom-ace-editor",
      "desc": "",
      "required": true,
      "disabled": false,
      "hidden": false,
      "isSensitive": false
    },
    "scriptParam": {
      "label": "脚本参数",
      "default": "",
      "desc": "脚本执行参数，多个参数用空格分隔。示例: param1 param2",
      "type": "vuex-input",
      "required": false
    },
    "timeout": {
      "label": "超时时间",
      "default": "1000",
      "type": "vuex-input",
      "desc": "请输入脚本执行超时时间，单位为秒，范围60-72000，默认1000",
      "required": true
    },
    "account": {
      "label": "执行账号",
      "default": "root",
      "placeholder": "",
      "type": "vuex-input",
      "desc": "",
      "required": true,
      "disabled": false,
      "hidden": false,
      "isSensitive": false
    },
    "targetEnvType": {
      "label": "目标机(非编译机)",
      "default": "MANUAL",
      "type": "enum-input",
      "required": true,
      "desc": "手工录入: 手工录入节点云区域和 IP 地址  ",
      "disabled": false,
      "hidden": false,
      "isSensitive": false,
      "list": [
        {
          "label": "手工录入",
          "value": "MANUAL"
        },
        {
          "label": "动态分组",
          "value": "DYNAMIC_GROUP"
        }
      ]
    },
    "targetIpList": {
      "label": "手工录入(云区域ID:IP)\n如：82:172.1.2.3，多个ip之间用,;换行符中的任意一个进行分隔",
      "default": "",
      "placeholder": "请输入目标 IP 列表(云区域ID:IP)\n如：82:172.1.2.3，多个ip之间用,;换行符中的任意一个进行分隔",
      "desc": "云区域ID:IP\n如：82:172.1.2.3\n多个ip之间用,;换行符中的任意一个进行分隔",
      "type": "vuex-textarea",
      "required": true,
      "disabled": false,
      "hidden": false,
      "isSensitive": false,
      "rely": {
        "operation": "AND",
        "expression": [
          {
            "key": "targetEnvType",
            "value": "MANUAL"
          }
        ]
      }
    },
    "dynamicGroupIdList": {
      "label": "动态分组ID（从CMDB获取）列表，多个ID之间用,;换行符中的任意一个进行分隔",
      "default": "",
      "placeholder": "请输入动态分组ID（从CMDB获取）列表\n如：brcfabc2si9h3j4v3qb1，多个ID之间用,;换行符中的任意一个进行分隔",
      "desc": "动态分组ID\n如：brcfabc2si9h3j4v3qb1\n多个ID之间用,;换行符中的任意一个进行分隔",
      "type": "vuex-textarea",
      "required": true,
      "disabled": false,
      "hidden": false,
      "isSensitive": false,
      "rely": {
        "operation": "AND",
        "expression": [
          {
            "key": "targetEnvType",
            "value": "DYNAMIC_GROUP"
          }
        ]
      }
    }
  }
}

